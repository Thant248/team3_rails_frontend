                            <%= link_to "#{m_user['name']}", m_user_path(id: m_user['id']), style: 'word-spacing: -0.63em;' %>
                          <% end %>
                        <% end %>
                        <% if @direct_msgcounts[@count] != 0 %>
                          <li class="countnumbertwo">
                            <%= @direct_msgcounts[@count] %>

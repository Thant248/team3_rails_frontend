                        <% else %>
                          <% if @direct_draft_status_counts[@count] != 0 %>
                            <%= link_to "#{m_user['name']}", m_user_path(id: m_user['id']), style: 'word-spacing: -0.63em;' %><span class="glyphicon glyphicon-pencil" style="font-size: 10px;"></span>

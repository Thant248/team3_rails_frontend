                      <% else %>
                        <%if @group_draft_status_counts[@c_count] != 0 %>
                          <i class="fa fa-lock"></i>
                          <span style="display: inline-block;">
                            <%= link_to m_channel["channel_name"], m_channel_path(id: m_channel["id"]), style: 'padding-left: 0px;'%>
